[alias]
  ci = commit
  cia = commit --amend --no-edit
  cim = commit -m
  cit = commit --all -m
  co = checkout
  df = diff --color --color-moved --find-renames=12% --find-copies=12% --ignore-space-change --ignore-all-space --ignore-blank-lines
  lg = log --show-signature
  st = status --branch --short
  unstage = reset HEAD --
[branch]
  autosetuprebase = always
[color]
  ui = auto
[commit]
  gpgsign = true
[core]
  autocrlf = input
  quotepath = false
  precomposeunicode = true
	pager = less -S
[diff]
  algorithm = histogram
  indentHeuristic = true
  whitespace = -blank-at-eol,-space-before-tab,-indent-with-non-tab,-tab-in-indent,-blank-at-eof,-trailing-space,-cr-at-eol
[include]
  path = .gitconfig.local
[interactive]
  singlekey = true
[merge]
  ff = false
[pull]
  rebase = preserve
[push]
  default = simple